# PostgreSQL Configuration for Docker Compose
# Copy this file to .env and adjust values as needed

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=main
POSTGRES_HOST=db.localtest.me

# PostgreSQL base URL without database name (for test preparation)
POSTGRES_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:5432
# Full database URL with database name (for Drizzle and application)
DATABASE_URL=${POSTGRES_URL}/${POSTGRES_DB}
