{
  "name": "dominia",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "npm run build && vite preview",
    "deploy": "npm run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "type-check": "npm run cf-typegen && tsc --noEmit",
    "hono:env": "tsx scripts/generate-dev-vars.ts",
    "db:migrate": "npx dotenv -e .env -- drizzle-kit migrate",
    "db:clean": "tsx scripts/db-clean.ts",
    "test:prepare": "npx dotenv -e .env.test -- drizzle-kit migrate",
    "test:clean": "tsx scripts/db-clean.ts --env=test",
    "test": "vitest run"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.1",
    "postgres": "^3.4.7",
    "typescript": "^5.9.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@cloudflare/vite-plugin": "^1.19.0",
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "@faker-js/faker": "^10.2.0",
    "dotenv-cli": "^11.0.0",
    "dotenv-expand": "^12.0.3",
    "drizzle-kit": "^0.31.8",
    "jose": "^6.1.3",
    "lefthook": "^2.0.13",
    "tsx": "^4.21.0",
    "vite": "^7.3.0",
    "vite-ssr-components": "^0.5.2",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.56.0"
  }
}
